<% @loaded = 'false' %>
<%  battlegamesMilitia = @allBattlegames.reject {|k,v|
          if (v['types'].include? "militia")
               false
          else
               true
          end
               
     }%>

<div data-role="page" class="jqm-demos jqm-home" id="battlegames-militia">

<%= erb :'sections/updated' %>
<%= erb :'sections/header' %>
<%= erb :'sections/nav-panel' %>
<%= erb :'sections/search-panel', locals: {loaded: @loaded} %>
<% @loaded = 'true' %>

         <div role="main" class="ui-content">
            <ul data-role="listview" data-filter="true" data-autodividers="true" data-filter-placeholder="Search Battlegames (Militia type)" data-inset="true" data-icon="false">

<% battlegamesMilitia.each {|key, value| %>

               <li><a href=<%="/battlegamesby/#{key[0]}##{key}"%> data-ajax="false"><%="#{value['name']}"%></a></li>
<% } %>
            </ul>
         </div>
         <!-- /content -->

</div><!-- /page -->

